{
  "include": ["./*.ts"],
  "exclude": ["node_modules", "ava.config.js"],
  "compilerOptions": {
    "outDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
  }
}
