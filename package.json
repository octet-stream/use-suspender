{
  "type": "module",
  "name": "use-suspender",
  "version": "1.1.0",
  "description": "Wraps asynchronous functions allowing to use them with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "source": "./useSuspender.ts",
  "main": "./useSuspender.mjs",
  "umd:main": "./useSuspender.umd.js",
  "module": "./useSuspender.legacy.mjs",
  "types": "./useSuspender.d.ts",
  "exports": {
    "import": "./useSuspender.mjs",
    "require": "./useSuspender.cjs",
    "types": "./useSuspender.d.ts",
    "default": "./useSuspender.mjs"
  },
  "repository": "octet-stream/use-suspender",
  "author": "Nick K. <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "cleanup": "del-cli useSuspender.cjs useSuspender.cjs.map useSuspender.esm.js useSuspender.esm.js.map useSuspender.mjs useSuspender.mjs.map useSuspender.legacy.mjs useSuspender.legacy.mjs.map useSuspender.umd.js useSuspender.umd.js.map useSuspender.d.ts",
    "build": "microbundle",
    "size-limit": "size-limit",
    "staged": "lint-staged",
    "coverage": "c8 npm test",
    "test": "ava",
    "lint:types": "tsc --noEmit",
    "eslint": "eslint useSuspender.ts useSuspender.test.tsx",
    "ci": "c8 npm test && c8 report --reporter=json",
    "postinstall": "husky install",
    "prepublishOnly": "npm run build && pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "6.2.2",
    "@size-limit/preset-small-lib": "8.2.4",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "ava": "5.2.0",
    "c8": "7.13.0",
    "del-cli": "5.0.0",
    "eslint": "8.37.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-ava": "14.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.2",
    "global-jsdom": "8.8.0",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "lint-staged": "13.2.0",
    "microbundle": "0.15.1",
    "nanoid": "4.0.2",
    "pinst": "3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sinon": "15.0.3",
    "size-limit": "8.2.4",
    "ts-node": "10.9.1",
    "typescript": "5.0.3"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
