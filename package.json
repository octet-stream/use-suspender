{
  "name": "use-suspender",
  "version": "0.3.0",
  "description": "Execute asynchronous actions with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "main": "use-suspender",
  "repository": "git@github.com:octet-stream/use-suspender.git",
  "author": "octet-stream <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "size": "size-limit",
    "staged": "lint-staged",
    "coverage": "nyc ava",
    "test": "ava",
    "ci": "nyc npm test && nyc report --reporter=lcov && node_modules/.bin/codecov"
  },
  "ava": {
    "files": [
      "test/**",
      "!test/**/__helper__/**"
    ],
    "require": [
      "jsdom-global/register"
    ],
    "babel": {
      "extensions": [
        "js",
        "jsx"
      ],
      "testOptions": {
        "presets": [
          "@babel/preset-react"
        ]
      },
      "compileAsTests": [
        "test/__helper__/**"
      ]
    }
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@babel/preset-react": "7.8.3",
    "@octetstream/eslint-config": "4.0.0",
    "@size-limit/preset-small-lib": "4.0.1",
    "@testing-library/react": "9.4.0",
    "ava": "3.3.0",
    "codecov": "3.6.5",
    "eslint": "6.8.0",
    "eslint-plugin-ava": "10.0.1",
    "eslint-plugin-markdown": "1.0.1",
    "eslint-plugin-react": "7.18.3",
    "husky": "4.2.3",
    "jsdom": "16.1.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "10.0.7",
    "nanoid": "2.1.11",
    "nyc": "15.0.0",
    "prop-types": "15.7.2",
    "proxyquire": "2.1.3",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "sinon": "8.1.1",
    "size-limit": "4.0.1"
  },
  "peerDependencies": {
    "react": ">= 16.6.x"
  }
}
