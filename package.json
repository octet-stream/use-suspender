{
  "type": "module",
  "name": "use-suspender",
  "version": "1.1.0",
  "description": "Wraps asynchronous functions allowing to use them with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "source": "./useSuspender.ts",
  "main": "./useSuspender.umd.js",
  "umd:main": "./useSuspender.umd.js",
  "module": "./useSuspender.legacy.mjs",
  "types": "./useSuspender.d.ts",
  "exports": {
    "import": "./useSuspender.mjs",
    "require": "./useSuspender.cjs",
    "types": "./useSuspender.d.ts",
    "default": "./useSuspender.esm.js"
  },
  "repository": "octet-stream/use-suspender",
  "author": "Nick K. <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "cleanup": "del-cli useSuspender.cjs useSuspender.cjs.map useSuspender.esm.js useSuspender.esm.js.map useSuspender.mjs useSuspender.mjs.map useSuspender.legacy.mjs useSuspender.legacy.mjs.map useSuspender.umd.js useSuspender.umd.js.map useSuspender.d.ts",
    "build": "microbundle",
    "size-limit": "size-limit",
    "staged": "lint-staged",
    "coverage": "c8 npm test",
    "test": "ava",
    "test:types": "tsc --noEmit",
    "eslint": "eslint useSuspender.ts useSuspender.test.tsx",
    "ci": "npm run test:types && c8 npm test && c8 report --reporter=json",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "6.2.2",
    "@size-limit/preset-small-lib": "7.0.8",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "ava": "4.3.0",
    "c8": "7.13.0",
    "del-cli": "^4.0.1",
    "eslint": "8.34.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-ava": "13.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-react": "7.32.2",
    "global-jsdom": "^8.7.0",
    "husky": "8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "13.1.2",
    "microbundle": "^0.15.1",
    "pinst": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "sinon": "15.0.1",
    "size-limit": "7.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
