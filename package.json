{
  "type": "module",
  "name": "use-suspender",
  "version": "1.1.0",
  "description": "Wraps asynchronous functions allowing to use them with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "main": "./useSuspender.js",
  "types": "./useSuspender.d.ts",
  "exports": {
    ".": {
      "import": "./useSuspender.js",
      "types": "./useSuspender.d.ts"
    }
  },
  "repository": "octet-stream/use-suspender",
  "author": "Nick K. <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "cleanup": "del-cli useSuspender.js useSuspender.d.ts",
    "build": "tsc && tsc --project tsconfig.d.ts.json",
    "size-limit": "size-limit",
    "staged": "lint-staged",
    "coverage": "c8 npm test",
    "test": "ava",
    "test:types": "tsc --noEmit",
    "eslint": "eslint useSuspender.ts useSuspender.test.tsx",
    "ci": "npm run test:types && c8 npm test && c8 report --reporter=json",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "6.2.2",
    "@size-limit/preset-small-lib": "7.0.8",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "ava": "4.3.0",
    "c8": "7.11.3",
    "del-cli": "^4.0.1",
    "eslint": "8.17.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-ava": "13.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "7.30.0",
    "global-jsdom": "^8.4.0",
    "htm": "^3.1.1",
    "husky": "8.0.1",
    "jsdom": "^19.0.0",
    "lint-staged": "13.0.2",
    "pinst": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "sinon": "14.0.0",
    "size-limit": "7.0.8",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
