{
  "name": "use-suspender",
  "version": "1.0.0",
  "description": "Wraps asynchronous functions allowing to use them with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "main": "useSuspender.js",
  "types": "useSuspender.d.ts",
  "repository": "octet-stream/use-suspender",
  "author": "Nick K. <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "size": "size-limit",
    "staged": "lint-staged",
    "coverage": "c8 npm test",
    "test": "ava -s",
    "test:types": "tsd",
    "eslint": "eslint useSuspender.js *.test.js",
    "ci": "c8 npm test && c8 report --reporter=json",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "5.0.0",
    "@size-limit/preset-small-lib": "5.0.3",
    "@testing-library/react-hooks": "7.0.1",
    "ava": "3.15.0",
    "c8": "7.8.0",
    "eslint": "7.32.0",
    "eslint-plugin-ava": "12.0.0",
    "eslint-plugin-markdown": "2.2.0",
    "eslint-plugin-react": "7.24.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "pinst": "^2.1.6",
    "react": "17.0.2",
    "react-test-renderer": "17.0.2",
    "sinon": "11.1.2",
    "size-limit": "5.0.3",
    "tsd": "0.17.0"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
