{
  "packageManager": "pnpm@8.1.1",
  "type": "module",
  "name": "use-suspender",
  "version": "1.1.0",
  "description": "Wraps asynchronous functions allowing to use them with React.Suspense",
  "keywords": [
    "react-suspense",
    "suspense",
    "hooks",
    "react-hooks"
  ],
  "source": "./src/useSuspender.ts",
  "main": "./lib/useSuspender.mjs",
  "umd:main": "./lib/useSuspender.umd.js",
  "module": "./lib/useSuspender.legacy.mjs",
  "types": "./lib/useSuspender.d.ts",
  "exports": {
    "import": "./lib/useSuspender.mjs",
    "require": "./lib/useSuspender.cjs",
    "types": "./lib/useSuspender.d.ts",
    "default": "./lib/useSuspender.mjs"
  },
  "repository": "octet-stream/use-suspender",
  "author": "Nick K. <io@octetstream.me>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "cleanup": "del-cli lib",
    "build": "microbundle --tsconfig tsconfig.build.json --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx",
    "size-limit": "size-limit",
    "staged": "lint-staged",
    "coverage": "c8 npm test",
    "test": "ava",
    "lint:types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts src/**/*.tsx",
    "ci": "c8 npm test && c8 report --reporter=json",
    "postinstall": "husky install",
    "prepublishOnly": "pnpm lint:types pnpm cleanup && pnpm build && pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@octetstream/eslint-config": "7.1.0",
    "@size-limit/preset-small-lib": "8.2.4",
    "@testing-library/react": "14.0.0",
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.57.1",
    "@typescript-eslint/parser": "5.57.1",
    "ava": "5.2.0",
    "c8": "7.13.0",
    "del-cli": "5.0.0",
    "eslint": "8.38.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-ava": "14.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.2",
    "global-jsdom": "8.8.0",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "lint-staged": "13.2.1",
    "microbundle": "0.15.1",
    "nanoid": "4.0.2",
    "pinst": "3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sinon": "15.0.3",
    "size-limit": "8.2.4",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": "18.x"
  },
  "dependencies": {
    "fast-deep-equal": "3.1.3"
  }
}
