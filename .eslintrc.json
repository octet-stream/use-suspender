{
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "project": "./tsconfig.eslint.json"
  },
  "settings": {
    "react": {
      "version": "18.x"
    },
    "import/resolver": {
      "typescript": {}
    }
  },
  "plugins": [
    "ava"
  ],
  "extends": [
    "plugin:ava/recommended",
    "plugin:react/recommended",
    "@octetstream/eslint-config/esm/typescript"
  ],
  "rules": {
    "ava/no-ignored-test-files": ["error", {
      "files": ["*.test.{ts,tsx}"]
    }]
  }
}
